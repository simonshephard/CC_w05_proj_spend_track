<h2>Edit Transaction <%= @transaction.id %></h2>

<form method="post" action="/transactions/<%= @transaction.id %>">

<div class="two-col-table">

  <div class="table-box"></div>
  <div class="table-box"></div>

  <div class="table-head"><label for="date_time">Date-Time</label></div>
  <div class="table-box"><input id="date_time" class="input-date-time" type="datetime-local" name="date_time" value="<%= @transaction.date_time %>" /></div>

  <div class="table-head"><label for="amount">Amount</label></div>
  <div class="table-box"><input id="amount" class="input-text" type="text" name="amount" value="<%= Transaction.money_input(@transaction.amount) %>" /></div>

  <div class="table-head"><label for="description">Description</label></div>
  <div class="table-box"><input id="description" class="input-text" type="text" name="description" value="<%= @transaction.description %>" /></div>

  <div class="table-head"><label>Merchant</label></div>
  <div class="table-box-contain">
    <div class="hidden-radio-dropdown">
      <% for merchant in @merchants %>
        <% if merchant.id == @transaction.merchant.id %>
          <input type="radio" id="merchant<%= merchant.id %>" value="<%= merchant.id %>" class="hidden-radio-button" name="merchant_id" checked="checked">
          <% first_item = false %>
        <% else %>
          <input type="radio" id="merchant<%= merchant.id %>" value="<%= merchant.id %>" class="hidden-radio-button" name="merchant_id">
        <% end %>
        <label for="merchant<%= merchant.id %>" class="hidden-radio-label"><div class="hidden-radio-div"><%= merchant.name %></div></label>
      <% end %>
    </div>
  </div>

  <div class="table-head"><label>Tag</label></div>
  <div class="table-box-contain">
    <div class="hidden-radio-dropdown">
      <% for tag in @tags %>
        <% if tag.id == @transaction.tag.id %>
          <input type="radio" id="tag<%= tag.id %>" value="<%= tag.id %>" class="hidden-radio-button" name="tag_id" checked="checked">
          <% first_item = false %>
        <% else %>
          <input type="radio" id="tag<%= tag.id %>" value="<%= tag.id %>" class="hidden-radio-button" name="tag_id">
        <% end %>
        <label for="tag<%= tag.id %>" class="hidden-radio-label"><div class="hidden-radio-div"><%= tag.name %></div></label>
      <% end %>
    </div>
  </div>

  <div class="table-box"></div>
  <div class="table-box"></div>

  <div class="table-box"></div>
  <div class="table-box"><input class="input-submit input-submit-edit" type='submit' value="Confirm Edit"/></div>

</div>

</form>

<div class="spacer"></div>
<div class="spacer"></div>

<h2>Delete Transaction <%= @transaction.id %></h2>

<div class="spacer"></div>

<form method="post" action="/transactions/<%= @transaction.id %>/delete">
  <div class="two-col-table">
    <div class="table-box"><a class="remove-link" href="/transactions"><div class="input-submit input-submit-div">Cancel</div></a></div>
    <div class="table-box"><input class="input-submit input-submit-delete" type='submit' value="Confirm Delete"/></div>
  </div>
</form>

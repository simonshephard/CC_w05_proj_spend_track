<h2>Transactions (total: <%= Transaction.money_amount(@total) %>)</h2>

<div class="spacer"></div>

<div class="two-col-table">
  <div class="table-box ca"><a class="remove-link" href="/transactions/new"><div class="link-button">Add New</div></a></div>
  <div class="table-box ca"><a class="remove-link" href="/transactions/filter"><div class="link-button">Filter</div></a></div>
</div>

<div class="spacer"></div>

<div class="six-col-table">

  <div class="table-head ca"><a class="remove-link" href="/transactions/sort_id">Id / Edit</a></div>
  <div class="table-head la"><a class="remove-link" href="/transactions/sort_time">Date-Time</a></div>
  <div class="table-head ra"><a class="remove-link" href="/transactions/sort_amount">Amount</a></div>
  <div class="table-head la"><a class="remove-link" href="/transactions/sort_description">Description</a></div>
  <div class="table-head ca"><a class="remove-link" href="/transactions/sort_merchant">Merchant</a></div>
  <div class="table-head ca"><a class="remove-link" href="/transactions/sort_tag">Tag</a></div>

  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>

<% (0...@transactions.length).each do |i| %>

  <div class="table-box ca"><a class="remove-link" href="/transactions/<%= @transactions[i].id %>/edit"><div class="edit"><%= @transactions[i].id %></div></a></div>
  <div class="table-box la"><%= @transactions[i].date_time_format %></div>
  <div class="table-box ra"><%= Transaction.money_amount(@transactions[i].amount) %></div>
  <div class="table-box la"><%= @transactions[i].description %></div>
  <div class="table-box ca"><%= @transactions[i].merchant.name %></div>
  <div class="table-box ca"><%= @transactions[i].tag.name %></div>

<% end %>

</div>

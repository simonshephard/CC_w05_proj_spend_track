<h2>Transactions</h2>

<div class="transactions-table">

  <div class="table-head">Transaction Id</div>
  <div class="table-head">Date-time</div>
  <div class="table-head">Amount</div>
  <div class="table-head">Description</div>
  <div class="table-head">Merchant</div>
  <div class="table-head">Tag</div>

<% @transactions.each do |transaction| %>

  <div class="table-box"><a href="/transactions/<%= transaction.id %>"><%= transaction.id %></a></div>
  <div class="table-box"><%= transaction.date_time_format %></div>
  <div class="table-box"><%= Transaction.money_amount(transaction.amount) %></div>
  <div class="table-box"><%= transaction.description %></div>
  <div class="table-box"><%= transaction.merchant.name %></div>
  <div class="table-box"><%= transaction.tag.name %></div>

<% end %>

  <div class="table-total">Total</div>
  <div class="table-total"></div>
  <div class="table-total"><%= Transaction.money_amount(@total) %></h2></div>
  <div class="table-total"></div>
  <div class="table-total"></div>
  <div class="table-total"></div>

</div>

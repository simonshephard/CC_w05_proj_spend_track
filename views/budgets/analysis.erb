<h2>Analysis</h2>

<div class="spacer"></div>

<div class="six-col-table">

  <div class="table-head la">Year-Month</div>
  <div class="table-head ra">Total</div>
  <div class="table-head ra">Budget</div>
  <div class="table-head ra">Vs. Budget</div>
  <div class="table-head la">Chart</div>
  <div class="table-head la"></div>

  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>

<% (0...@analysis[0].length).each do |month| %>

  <div class="table-box ca"><%= @analysis[0][month] %></div>
  <div class="table-box ra"><%= @analysis[1][month] %></div>
  <div class="table-box ra"><%= @analysis[2][month] %></div>
  <div class="table-box ra"><%= @analysis[3][month] %></div>
  <div class="table-box la"><span><%= @analysis[4][month] %></span><span class="red-span"><%= @analysis[5][month] %></span></div>
  <div class="table-box"></div>

<% end %>

</div>

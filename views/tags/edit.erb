<h2>Edit Tag <%= @tag.id %></h2>

<form method="post" action="/tags/<%= @tag.id %>">

<div class="three-col-table">

  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>

  <div class="table-head"><label for="name">Edit</label></div>
  <div class="table-box"><input id="name" class="input-text" type="text" name="name" value="<%= @tag.name %>" /></div>
  <div class="table-box"><input class="input-submit input-submit-edit" type='submit' value="Confirm Edit"/></div>

</div>

</form>

<div class="spacer"></div>
<div class="spacer"></div>

<h2>Delete Tag <%= @tag.id %></h2>
<div class="spacer"></div>
<h2 class="warning">WARNING - ALSO DELETES TRANSACTIONS SHOWN</h2>


<div class="spacer"></div>

<form method="post" action="/tags/<%= @tag.id %>/delete">
  <div class="two-col-table">
    <div class="table-box"><a class="remove-link" href="/tags"><div class="input-submit input-submit-div">Cancel</div></a></div>
    <div class="table-box"><input class="input-submit input-submit-delete" type='submit' value="Confirm Delete"/></div>
  </div>
</form>

<div class="spacer"></div>

<div class="transactions-table">

  <div class="table-head la">Id</div>
  <div class="table-head ra">Date-Time</div>
  <div class="table-head ra">Amount</div>
  <div class="table-head ra">Description</div>
  <div class="table-head ra">Merchant</div>
  <div class="table-head ra">Tag</div>

  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>

<% @transactions.each do |transaction| %>

  <div class="table-box la"><a href="/transactions/<%= transaction.id %>"><%= transaction.id %></a></div>
  <div class="table-box ra"><%= transaction.date_time_format %></div>
  <div class="table-box ra"><%= Transaction.money_amount(transaction.amount) %></div>
  <div class="table-box ra"><%= transaction.description %></div>
  <div class="table-box ra"><%= transaction.merchant.name %></div>
  <div class="table-box ra"><%= transaction.tag.name %></div>

<% end %>

</div>

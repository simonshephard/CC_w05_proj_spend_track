<h2>Tags</h2>

<form method="post" action="/tags">

<div class="three-col-table">

  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>

  <div class="table-head"><label for="name">Enter New</label></div>
  <div class="table-box"><input id="name" class="input-text" type="text" name="name" /></div>
  <div class="table-box"><input class="input-submit" type='submit' value="Confirm New"/></div>

</div>

</form>


<div class="three-col-table">

  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>

  <div class="table-head">Id</div>
  <div class="table-head">Name</div>
  <div class="table-head"></div>

  <div class="table-box"></div>
  <div class="table-box"></div>
  <div class="table-box"></div>

<% @tags.each do |tag| %>

  <div class="table-box"><a href="/tags/<%= tag.id %>"><%= tag.id %></a></div>
  <div class="table-box"><%= tag.name %></div>
  <div class="table-box">
    <form method="get" action="/tags/<%= tag.id %>/edit">
      <input class="input-submit" type='submit' value="Edit / Delete"/>
    </form>
  </div>

<% end %>

</div>

<h2>Merchant Id: <%= @merchant.id %></h2>

<ul>
  <li><a href="/merchants/<%= @merchant.id %>">Merchant Id: <%= @merchant.id %></a>, Name: <%= @merchant.name %> </li>
</ul>

<form method="post" action="/merchants/<%= @merchant.id %>/delete">
  <input type='submit' value="Delete Merchant"/>
</form>

<form method="get" action="/merchants/<%= @merchant.id %>/edit">
  <input type='submit' value="Edit Merchant"/>
</form>
